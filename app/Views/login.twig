{% include 'layout/header.twig' %}
<div class="container">
    <h4 class="mb-3 text-center">Login form</h4>
    <div class="row">
        <div class="offset-lg-4 col-xs-12 col-lg-4">
            {% if users|length > 0  %}
                <div class="alert alert-warning" role="alert">
                    A simple warning alertâ€”check it out!
                </div>
            {% endif %}
            <form action="/user/login" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input name="login" type="email" class="form-control" id="exampleInputEmail1"
                           aria-describedby="emailHelp"
                           placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input name="password" type="password" class="form-control" id="exampleInputPassword1"
                           placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/user/registration" class="btn btn-info">Registration</a>
            </form>
        </div>
    </div>
</div>
{% include 'layout/footer.twig' %}